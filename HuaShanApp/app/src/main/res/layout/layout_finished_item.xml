<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/all_activity_background"
    android:orientation="vertical">


    <android.support.percent.PercentFrameLayout
        android:id="@+id/fl_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        >

        <TextView
            android:id="@+id/name"
            app:layout_widthPercent="50%"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="5%"
            android:layout_gravity="center_vertical"
            android:text="CR216001-31补充流动资金"
            android:textSize="13dp"/>

        <ImageView
            app:layout_widthPercent="4%"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="59%"
            android:src="@drawable/sum_icon"/>

        <TextView
            android:id="@+id/sum"
            app:layout_widthPercent="25%"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="64%"
            android:layout_gravity="center_vertical"
            android:text="1,000,000.00"
            android:textColor="#f67804"
            android:textSize="15dp"
            />

        <ImageView
            android:id="@+id/open"
            app:layout_widthPercent="5%"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            app:layout_marginRightPercent="5%"
            android:src="@drawable/btn_open_img"/>
    </android.support.percent.PercentFrameLayout>

    <android.support.percent.PercentFrameLayout
        android:id="@+id/fl_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:visibility="gone">


        <android.support.percent.PercentFrameLayout
            app:layout_widthPercent="100%"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_single_c4e1ff_10dp">

            <TextView
                app:layout_widthPercent="25%"
                app:layout_heightPercent="13%"
                app:layout_marginLeftPercent="6%"
                app:layout_marginTopPercent="4.5%"
                android:gravity="center_vertical"
                android:text="投资时间："
                android:textSize="@dimen/Myfinance_content_text_size_1"
                android:textColor="@color/Myfinance_content_text_color_1"/>

            <TextView
                app:layout_widthPercent="25%"
                app:layout_heightPercent="13%"
                app:layout_marginLeftPercent="6%"
                app:layout_marginTopPercent="17.5%"
                android:gravity="center_vertical"
                android:text="投资期限："
                android:textSize="@dimen/Myfinance_content_text_size_1"
                android:textColor="@color/Myfinance_content_text_color_1"/>

            <TextView
                app:layout_widthPercent="25%"
                app:layout_heightPercent="13%"
                app:layout_marginLeftPercent="6%"
                app:layout_marginTopPercent="30.5%"
                android:gravity="center_vertical"
                android:text="年化收益率："
                android:textSize="@dimen/Myfinance_content_text_size_1"
                android:textColor="@color/Myfinance_content_text_color_1"/>

            <TextView
                app:layout_widthPercent="25%"
                app:layout_heightPercent="13%"
                app:layout_marginLeftPercent="6%"
                app:layout_marginTopPercent="43.5%"
                android:gravity="center_vertical"
                android:text="还款方式："
                android:textSize="@dimen/Myfinance_content_text_size_1"
                android:textColor="@color/Myfinance_content_text_color_1"/>

            <TextView
                app:layout_widthPercent="25%"
                app:layout_heightPercent="13%"
                app:layout_marginLeftPercent="6%"
                android:gravity="center_vertical"
                app:layout_marginTopPercent="56.5%"
                android:text="完成时间："
                android:textSize="@dimen/Myfinance_content_text_size_1"
                android:textColor="@color/Myfinance_content_text_color_1"/>



            <TextView
                app:layout_widthPercent="25%"
                app:layout_heightPercent="13%"
                app:layout_marginLeftPercent="6%"
                android:gravity="center_vertical"
                app:layout_marginTopPercent="69.5%"
                android:text="已收本息："
                android:textSize="@dimen/Myfinance_content_text_size_1"
                android:textColor="@color/Myfinance_content_text_color_1"/>

            <TextView
                app:layout_widthPercent="16%"
                app:layout_heightPercent="10%"
                app:layout_marginLeftPercent="6%"
                android:gravity="center_vertical"
                app:layout_marginTopPercent="82.5%"
                android:text="协议："
                android:textSize="@dimen/Myfinance_content_text_size_1"
                android:textColor="@color/Myfinance_content_text_color_1"/>


            <!--content-->

            <TextView
                android:id="@+id/time"
                app:layout_widthPercent="50%"
                app:layout_heightPercent="13%"
                app:layout_marginLeftPercent="31%"
                app:layout_marginTopPercent="4.5%"
                android:gravity="center_vertical"
                android:text="2016-11-12  14:31:21"
                android:textSize="@dimen/Myfinance_content_text_size_2"
                android:textColor="@color/Myfinance_content_text_color_2"/>

            <TextView
                android:id="@+id/term"
                app:layout_widthPercent="50%"
                app:layout_heightPercent="13%"
                app:layout_marginLeftPercent="31%"
                app:layout_marginTopPercent="17.5%"
                android:gravity="center_vertical"
                android:text="4个月"
                android:textSize="@dimen/Myfinance_content_text_size_2"
                android:textColor="@color/Myfinance_content_text_color_2"/>

            <TextView
                app:layout_widthPercent="50%"
                app:layout_heightPercent="13%"
                app:layout_marginLeftPercent="31%"
                app:layout_marginTopPercent="30.5%"
                android:gravity="center_vertical"
                android:text="8.4%"
                android:textSize="@dimen/Myfinance_content_text_size_2"
                android:textColor="@color/Myfinance_content_text_color_2"/>

            <TextView
                app:layout_widthPercent="50%"
                app:layout_heightPercent="13%"
                app:layout_marginLeftPercent="31%"
                app:layout_marginTopPercent="43.5%"
                android:gravity="center_vertical"
                android:text="每月付息，到期还本"
                android:textSize="@dimen/Myfinance_content_text_size_2"
                android:textColor="@color/Myfinance_content_text_color_2"/>

            <TextView
                app:layout_widthPercent="50%"
                app:layout_heightPercent="13%"
                app:layout_marginLeftPercent="31%"
                app:layout_marginTopPercent="56.5%"
                android:gravity="center_vertical"
                android:text="2016-12-12"
                android:textSize="@dimen/Myfinance_content_text_size_2"
                android:textColor="@color/Myfinance_content_text_color_2"/>

            <TextView
                app:layout_widthPercent="50%"
                app:layout_heightPercent="13%"
                app:layout_marginLeftPercent="31%"
                app:layout_marginTopPercent="69.5%"
                android:gravity="center_vertical"
                android:text="￥ 120,000.00"
                android:textSize="@dimen/Myfinance_content_text_size_2"
                android:textColor="@color/Myfinance_content_text_color_2"/>

            <TextView
                android:id="@+id/check_btn"
                app:layout_widthPercent="50%"
                app:layout_heightPercent="10%"
                app:layout_marginLeftPercent="22%"
                app:layout_marginTopPercent="82.5%"
                android:gravity="center_vertical"
                android:text="查看"
                android:textSize="@dimen/Myfinance_content_text_size_2"
                android:textColor="#0894EC"/>

            <TextView
                app:layout_widthPercent="3%"
                app:layout_heightPercent="10%"
                app:layout_marginLeftPercent="31%"
                app:layout_marginTopPercent="82.5%"
                android:gravity="center_vertical"
                android:text="/"
                android:textSize="@dimen/Myfinance_content_text_size_2"
                android:textColor="@color/Myfinance_content_text_color_2"/>

            <TextView
                android:id="@+id/download_btn"
                app:layout_widthPercent="50%"
                app:layout_heightPercent="10%"
                app:layout_marginLeftPercent="34%"
                app:layout_marginTopPercent="82.5%"
                android:gravity="center_vertical"
                android:text="下载"
                android:textSize="@dimen/Myfinance_content_text_size_2"
                android:textColor="#0894EC"/>


        </android.support.percent.PercentFrameLayout>

    </android.support.percent.PercentFrameLayout>

</LinearLayout>

