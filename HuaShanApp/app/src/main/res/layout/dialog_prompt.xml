<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50000000">

    <android.support.percent.PercentFrameLayout
        android:layout_width="300dp"
        app:layout_heightPercent="25%"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_fillet_ffffff_5dp"
        >

        <TextView
            android:id="@+id/pro_tv_1"
            android:layout_width="match_parent"
            app:layout_heightPercent="35%"
            android:gravity="center"
            android:text="提示1"
            android:textSize="@dimen/promptdialog_text_size_1"
            android:textColor="@color/promptdialog_text_color_1"/>

        <TextView
            android:id="@+id/pro_tv_2"
            android:layout_width="match_parent"
            app:layout_heightPercent="25%"
            app:layout_marginTopPercent="35%"
            android:gravity="center"
            android:text="提示2"
            android:textSize="@dimen/promptdialog_text_size_2"
            android:textColor="@color/promptdialog_text_color_2"/>

        <ImageView
            app:layout_widthPercent = "90%"
            android:layout_height="0.5dp"
            app:layout_marginTopPercent="60%"
            android:layout_gravity="center_horizontal"
            android:background="@color/line_color"/>
        <ImageView
            android:layout_width="0.5dp"
            app:layout_heightPercent="30%"
            android:layout_gravity="bottom|center_horizontal"
            app:layout_marginBottomPercent="5%"
            android:background="@color/line_color"/>

        <TextView
            android:id="@+id/bt_pro_l"
            app:layout_widthPercent = "50%"
            app:layout_heightPercent="40%"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="取消"
            android:textSize="@dimen/promptdialog_text_size_3"
            android:textColor="@color/promptdialog_text_color_3"/>

        <TextView
            android:id="@+id/bt_pro_r"
            app:layout_widthPercent = "50%"
            app:layout_heightPercent="40%"
            android:layout_gravity="bottom|right"
            android:gravity="center"
            android:text="确定"
            android:textSize="@dimen/promptdialog_text_size_3"
            android:textColor="@color/promptdialog_text_color_3"/>


    </android.support.percent.PercentFrameLayout>

</android.support.percent.PercentFrameLayout>