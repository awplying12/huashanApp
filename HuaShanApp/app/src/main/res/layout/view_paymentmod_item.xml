<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

   >
        <android.support.percent.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="#fff">


                <ImageView
                    app:layout_widthPercent="90%"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:background="@color/line_color"/>
                <TextView
                    android:id="@+id/pay_method"
                    app:layout_widthPercent="78%"
                    app:layout_heightPercent="50%"
                    android:layout_gravity="right"
                    android:text="账户余额"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:gravity="center_vertical|bottom"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/pay_content"
                    app:layout_widthPercent="78%"
                    app:layout_heightPercent="40%"
                    android:layout_gravity="right|bottom"
                    android:text="可用余额 3,214.47"
                    android:textSize="13dp"
                    android:textColor="#7b7b7b"/>

                <ImageView
                    android:id="@+id/pay_img"
                    app:layout_widthPercent="15%"
                    app:layout_heightPercent="55%"
                    android:layout_gravity="center_vertical"
                    app:layout_marginLeftPercent="5%"
                    android:src="@drawable/zhye_icon"/>

                <TextView
                    android:id="@+id/bt_recharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    app:layout_marginRightPercent="10%"
                    app:layout_marginBottomPercent="20%"
                    android:visibility="gone"
                    android:text="充值"
                    android:textSize="13dp"
                    android:textColor="#0894EC"/>

            </android.support.percent.PercentFrameLayout>
</LinearLayout>

