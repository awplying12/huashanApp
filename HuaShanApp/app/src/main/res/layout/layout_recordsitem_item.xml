<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="30dp">

    <TextView
        android:id="@+id/periods_tv"
        app:layout_widthPercent="25%"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="1/4"
        android:textSize="@dimen/Myfinance_content_text_size_2"
        android:textColor="@color/Myfinance_content_text_color_2"/>

    <TextView
        android:id="@+id/sum_tv"
        app:layout_widthPercent="25%"
        android:layout_height="30dp"
        app:layout_marginLeftPercent="25%"
        android:layout_weight="1"
        android:gravity="center"
        android:text="￥120,000.00"
        android:textSize="@dimen/Myfinance_content_text_size_2"
        android:textColor="@color/Myfinance_content_text_color_2"/>

    <TextView
        android:id="@+id/date_tv"
        app:layout_widthPercent="25%"
        android:layout_height="30dp"
        app:layout_marginLeftPercent="50%"
        android:layout_weight="1"
        android:gravity="center"
        android:text="2016-11-12"
        android:textSize="@dimen/Myfinance_content_text_size_2"
        android:textColor="@color/Myfinance_content_text_color_2"/>

    <TextView
        android:id="@+id/state_tv"
        app:layout_widthPercent="25%"
        android:layout_height="30dp"
        app:layout_marginLeftPercent="75%"
        android:layout_weight="1"
        android:gravity="center"
        android:text="已还"
        android:textSize="@dimen/Myfinance_content_text_size_2"
        android:textColor="@color/Myfinance_content_text_color_2"/>

</android.support.percent.PercentFrameLayout>
