<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    >
    <android.support.percent.PercentFrameLayout
        app:layout_widthPercent="10%"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_part1"
            android:layout_width="match_parent"
            app:layout_heightPercent="42%"
            android:src="@drawable/bg_checkmark"/>

        <ImageView
            android:id="@+id/img_part2"
            android:layout_width="1dp"
            app:layout_heightPercent="60%"
            android:layout_gravity="bottom|center_horizontal"
            android:background="#56abe4"/>


    </android.support.percent.PercentFrameLayout>

    <TextView
        android:id="@+id/tv_state"
        app:layout_widthPercent="40%"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="20%"
        android:text="提现状态"
        android:textSize="14dp"
        android:textColor="#56abe4"/>

    <TextView
        android:id="@+id/tv_time"
        app:layout_widthPercent="40%"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="60%"
        android:text="11-13 14:48"
        android:textSize="14dp"
        android:textColor="#adadad"
        />




</android.support.percent.PercentFrameLayout>
